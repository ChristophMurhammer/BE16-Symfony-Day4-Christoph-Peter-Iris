{% extends 'base.html.twig' %}
{% block body %}
   <h2 class="page-header"> Streaming and Content-Creator Gear </h2>

   <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Type</th>
                <th>Producer</th>
                <th>Price</th>
                <th>Beginner Friendly</th>
                <th></th>
            </tr>
        </thead>
        {% for gear,beginner in gears, beginners %}
            
        <tbody>
            <tr>
                <th scope="row">{{gear.id}}</th>
                <td>{{gear.ame}}</td>
                <td>{{gear.type}}</td>
                <td>{{gear.producer}}</td>
                <td>{{gear.price}}</td>
                <td>Test</td>
                {% if {{beginner.fk_beginner_id}} == 1 %}
                    <td>No</td>
                {% endif %}
                {% if {{beginner.fk_beginner_id}} == 2 %}
                    <td>Yes</td>
                {% endif %}
                <td>
                    <a href="/details/1" class="btn btn-info">Details</a>
                    <a href="/edit/1" class="btn btn-warning">Edit</a>
                    <a href="/delete/1" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
   </table>
{% endblock %}